# ============================================
# 基础配置
# ============================================

# MySQL 数据库密码（必需，请修改为安全的密码）
MYSQL_PASSWORD=changeme_to_secure_password

# MySQL 数据库名称
MYSQL_DATABASE=qq_reports

# MySQL 用户名
MYSQL_USER=root

# MySQL 端口
MYSQL_PORT=3306

# Flask 密钥（必需，请修改为随机字符串）
# 可使用命令生成：openssl rand -hex 32
FLASK_SECRET_KEY=changeme_to_random_secret_key

# Flask 运行环境（development 或 production）
FLASK_ENV=production

# 调试模式（true 或 false）
DEBUG=false


# ============================================
# 端口配置
# ============================================

# 前端端口（默认 80）
FRONTEND_PORT=80

# 后端端口（默认 5000）
BACKEND_PORT=5000


# ============================================
# OSS 配置（可选）
# ============================================

# 是否跳过 OSS（1=使用本地存储，0=使用OSS）
SKIP_OSS=1

# 阿里云 OSS Access Key ID（如使用OSS则必填）
OSS_ACCESS_KEY_ID=

# 阿里云 OSS Access Key Secret（如使用OSS则必填）
OSS_ACCESS_KEY_SECRET=

# 阿里云 OSS Endpoint（如使用OSS则必填）
# 示例：oss-cn-hangzhou.aliyuncs.com
OSS_ENDPOINT=

# 阿里云 OSS Bucket 名称（如使用OSS则必填）
OSS_BUCKET_NAME=


# ============================================
# OpenAI 配置（可选）
# ============================================

# OpenAI API Key（可选，用于 AI 评论功能）
OPENAI_API_KEY=

# OpenAI API 基础地址（可选）
OPENAI_BASE_URL=

# OpenAI 模型名称（可选）
OPENAI_MODEL=gpt-3.5-turbo


# ============================================
# CORS 配置
# ============================================

# 允许的前端域名（逗号分隔）
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost


# ============================================
# 其他配置
# ============================================

# 最大上传文件大小（MB）
MAX_UPLOAD_SIZE_MB=100

# API 基础地址（前端用）
VITE_API_BASE=/api
